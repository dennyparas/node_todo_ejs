<% include ../views/partials/header %>
<div class="row mt-4">
  <div class="col-md-6  offset-md-3">
    <div class="card">
      <div class="card-header"><strong>Edit Todo</strong></div>
      <div class="card-body">
        <form method="post" action="/todos/<%= todo.id%>">
          <div class="form-group">
            <label> Todo Name</label>
            <input class="form-control" type="text" name="title" value="<%= todo.title %>">
          </div>
          <div class="form-group">
            <label> Todo Body</label>
            <textarea class="form-control" name="body" cols="10" rows="5"><%= todo.body %></textarea>
          </div>
          <div class="form-check mb-2">
            <input name="completed" class="form-check-input" type="checkbox" value="true" id="defaultCheck1" <%=todo.completed
              ? "checked" : "" %>>
            <label class="form-check-label" for="defaultCheck1">
              Completed
            </label>
          </div>
          <button class="btn btn-info " type="submit">Update</button>
          <a class="btn btn-primary" href="/">Cancel</a>
        </form>
      </div>
    </div>
  </div>
</div>
<% include ../views/partials/footer %>