<% include ../views/partials/header %>
<div class="row mt-4">
  <div class="col-md-7">
    <form method="post" action="/todos">
      <div class="form-group">
        <label> Todo Name</label>
        <input  class="form-control" type="text" name="title" placeholder="Add Todo">
      </div>
      <div class="form-group"> 
        <label> Todo Body</label>
        <textarea class="form-control" name="body" cols="10" rows="5" placeholder="Add Body"></textarea>
      </div>
      <button class="btn btn-info btn-block" type="submit">Submit</button>
    </form>
  </div>
  <div class="col-md-5">
    <ul class="list-group"> 
      <% todos.forEach(function(todo) {%>
      <li class="list-group-item">
        <%= todo.title %> -
        <%= todo.body %>
        <a data-id="<%= todo.id %>" href="#" class="btn btn-info btn-sm delete-todo">Delete</a>
        <a class="btn btn-danger btn-sm" href="/todos/<%= todo.id %>">Edit</a>
      </li>
      <% }) %>
    </ul>
  </div>
</div>

<% include ../views/partials/footer %>